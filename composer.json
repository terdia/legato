{
    "name": "legato/legato",
    "description": "A Legato framework",
    "keywords": ["legato","php", "framework"],
    "license": "MIT",
    "type":"project",
    "authors": [
        {
            "name": "Osayawe Ogbemudia Terry",
            "email":"terry@devscreencast.com",
            "homepage": "https://devscreencast.com"
        }
    ],
    "require": {
        "php": ">=7.1.0",
        "legato/framework": "dev-develop"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.1"
    },
    "autoload": {
        "psr-4": {
            "App\\":"app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "copy__missing_env": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],"post-root-package-install": [
            "@composer copy__missing_env"
        ]
    },
    "config":{
        "optimize-autoloader":true,
        "preferred-install": "dist"
    }
}